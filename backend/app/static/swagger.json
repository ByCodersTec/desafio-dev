{
  "openapi": "3.0.0",
  "info": {
    "description": "sean",
    "version": "1.0.0",
    "title": "Flask-bycoders-challenge",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "Flask Bycoders Challenge",
      "description": "Example API for requesting and return Transaction and store datas"
    }
  ],
  "paths": {
    "/stores": {
      "get": {
        "tags": [
          "Stores"
        ],
        "summary": "Returns a list of stores",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/store"
            }
          }
        }
      }
    },
    "/transactions": {
      "get": {
        "tags": [
          "Transactions"
        ],
        "summary": "Returns a list of all transactions",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/transaction"
            }
          }
        }
      }
    },
    "/transactions/id": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "id of the specific transaction",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Transactions"
        ],
        "summary": "Returns specific transaction by given id",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/transaction"
            }
          }
        }
      }
    },
    "/transactions/store/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "id of the store that we want to get transactions from",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Transactions"
        ],
        "summary": "Get transactions from a given store id",
        
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/transactionStore"
            }
          },
          "400": {
            "description": "Failed. Misunderstood Request."
          },
          "404": {
            "description": "Failed. Book request not found."
          }
        }
      }
    },
    "/transactions/upload": {
      "post": {
        "tags": [
          "Transactions"
        ],
        "summary": "Upload a CNAB file.",
        "consumes": "multipart/form-data",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "media": {
                    "type": "string",
                    "format": "base64"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  
  "components": {
    "schemas": {
      "store": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "integer"
          },
          "name": {
            "type": "string",
            "format": "string"
          },
          "owner": {
            "type": "string",
            "format": "string"
          }
        }
      },
      "transaction" : {
        "type": "object",
        "properties": {
          "card": {
            "type": "string",
            "format": "string"
          },
          "cpf": {
            "type": "string",
            "format": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "hour": {
            "type": "string",
            "format": "date"
          },
          "id": {
            "type": "integer",
            "format": "integer"
          },
          "id_store": {
            "type": "integer",
            "format": "integer"
          },
          "transaction_type": {
            "type": "integer",
            "format": "integer"
          },
          "value": {
            "type": "number",
            "format": "float"
          }
        }
      },
      "transactionStore" : {
        "type": "object",
        "properties": {
          "card": {
            "type": "string",
            "format": "string"
          },
          "cpf": {
            "type": "string",
            "format": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "hour": {
            "type": "string",
            "format": "date"
          },
          "id": {
            "type": "integer",
            "format": "integer"
          },
          "id_store": {
            "type": "integer",
            "format": "integer"
          },
          "transaction_type": {
            "type": "string",
            "format": "string"
          },
          "value": {
            "type": "number",
            "format": "float"
          }
        }
      }      
    }
  }
}