{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["ES6"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
    "typeRoots": ["./types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/*", "./types/**/*.ts"]
}
